{
    "name": "sharepoint-outh",
    "label": "Sharepoint Oauth Package",
    "dependencies": [
        {
            "type": "service",
            "name": "http",
            "version": "v1.1.5",
            "instanceId": "shared"
        },
        {
            "type": "package",
            "name": "oauth",
            "version": "v1.0.1"
        }
    ],
    "configuration": [
        {
            "label": "Configuration id",
            "description": "Id used to store tokens",
            "name": "id",
            "type": "text"
        },
        {
            "label": "Auth URL",
            "name": "authUrl",
            "type": "text"
        },
        {
            "label": "Access Token URL",
            "name": "accessTokenUrl",
            "type": "text"
        },
        {
            "label": "Client Id",
            "name": "clientId",
            "type": "text"
        },
        {
            "label": "Client Secret",
            "name": "clientSecret",
            "type": "text"
        },
        {
            "label": "Scope",
            "name": "scope",
            "type": "text"
        },
        {
            "label": "State",
            "name": "state",
            "type": "text"
        },
        {
            "name": "oauthCallback",
            "label": "OAuth callback",
            "description": "The OAuth callback to configure in your GitHub App",
            "type": "label",
            "value": "config.WEBHOOK_URL+'/authCallback'"
        },
        {
            "name": "webhooksUrl",
            "label": "Webhooks URL",
            "description": "The URL to configure in webhooks of your GitHub App",
            "type": "label",
            "value": "@config.WEBHOOK_URL"
        }
    ],
    "events": [
        {
            "label": "Webhook",
            "name": "webhook",
            "description": "Happens when SharePoint sends a webhook to the endpoint."
        }
    ],
    "metadata": [
        {
            "type": "script",
            "namespace": "api",
            "path": "/scripts/functions.js"
        },
        {
            "type": "listener",
            "namespace": "webhook",
            "path": "/listeners/listeners.js"
        }
    ]
}